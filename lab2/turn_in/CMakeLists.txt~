cmake_minimum_required(VERSION 2.8)
project( DisplayImage )
find_package( OpenCV REQUIRED )

add_executable(calibrate lab2_2.cpp)
target_link_libraries( calibrate ${OpenCV_LIBS} )
add_executable(undistort lab2_3.cpp)
target_link_libraries( undistort ${OpenCV_LIBS} )
add_executable(pose lab2_4.cpp)
target_link_libraries( pose ${OpenCV_LIBS} )
add_executable(intrinsic lab2_5.cpp)
target_link_libraries( intrinsic ${OpenCV_LIBS} )
add_executable(undistortWebcam lab2_6.cpp)
target_link_libraries( undistortWebcam ${OpenCV_LIBS} )
